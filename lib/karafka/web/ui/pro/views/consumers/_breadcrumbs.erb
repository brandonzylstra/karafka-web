<% if @process %>
  <li class="breadcrumb-item">
    <a href="<%= root_path('consumers') %>">
      Consumers
    </a>
  </li>

  <li class="breadcrumb-item">
    <a href="<%= root_path('consumers', @process.id, 'subscriptions') %>">
      <%= @process.name %>
    </a>
  </li>

  <% if current_path.include?('/jobs') %>
    <li class="breadcrumb-item">
      <a href="<%= root_path('consumers', @process.id, 'jobs') %>">
        Running jobs
      </a>
    </li>
  <% else %>
    <li class="breadcrumb-item">
      <a href="<%= root_path('consumers', @process.id, 'subscriptions') %>">
        Active subscriptions
      </a>
    </li>
  <% end %>
<% end %>
